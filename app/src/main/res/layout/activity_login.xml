    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/EdtUsuario"
        android:hint="@string/title_edit_user"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EdtContraseÃ±a"
